{
  "expo": {
    "name": "Minymol",
    "slug": "minymol",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/favicon.png",
    "scheme": "minymol",
    "userInterfaceStyle": "light",
    "ios": {
      "buildNumber": "1",
      "supportsTablet": true,
      "bundleIdentifier": "com.minymol.app",
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false,
        "NSContactsUsageDescription": "Minymol necesita acceso a tus contactos para mostrarte qué contactos tuyos también usan la app, facilitando que puedas iniciar conversaciones y hacer negocios con personas que ya conoces.",
        "NSUserNotificationsUsageDescription": "Minymol necesita tu permiso para enviarte notificaciones push importantes sobre el estado de tus pedidos, nuevos mensajes de chat de tus proveedores o clientes, confirmaciones de transacciones y ofertas especiales personalizadas para tu negocio."
      },
      "googleServicesFile": "./GoogleService-Info.plist",
      "entitlements": {
        "aps-environment": "production"
      },
      "usesAppleSignIn": false
    },
    "android": {
      "versionCode": 1,
      "adaptiveIcon": {
        "foregroundImage": "./assets/favicon.png",
        "backgroundColor": "#16164C"
      },
      "package": "com.minymol.app",
      "googleServicesFile": "./google-services.json",
      "permissions": [
        "android.permission.POST_NOTIFICATIONS",
        "android.permission.READ_CONTACTS"
      ],
      "softwareKeyboardLayoutMode": "pan"
    },
    "web": {
      "output": "static",
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/favicon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#16164C",
          "dark": {
            "backgroundColor": "#16164C"
          }
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/favicon.png",
          "color": "#fa7e17",
          "sounds": [],
          "mode": "production",
          "iosDisplayInForeground": true
        }
      ],
      [
        "expo-build-properties",
        {
          "ios": {
            "deploymentTarget": "15.1",
            
            // --- INICIO DE LA NUEVA SOLUCIÓN ---
            // Habilitar modular headers SÓLO para los pods de Firebase/Google
            // que los necesitan, sin afectar a React-Core.
            "modularHeaders": {
              "enabledPods": [
                "FirebaseCore",
                "FirebaseCoreInternal",
                "FirebaseAnalytics",
                "FirebaseInstallations",
                "FirebaseMessaging",
                "FirebaseAuth",
                "GoogleUtilities",
                "RNFBApp" 
              ]
            }
          }
        }
      ],
      "expo-sqlite",
      "expo-video"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "fa331260-c87d-4a77-b708-31b53a5f11d3"
      }
    },
    "runtimeVersion": "1.0.0",
    "updates": {
      "url": "https://u.expo.dev/fa331260-c87d-4a77-b708-31b53a5f11d3"
    }
  }
}
