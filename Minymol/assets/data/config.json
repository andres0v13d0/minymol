{
  "app": {
    "name": "Minymol",
    "version": "1.0.0",
    "apiVersion": "v1",
    "defaultLanguage": "es",
    "supportedLanguages": ["es", "en", "pt"],
    "theme": {
      "primaryColor": "#4A90E2",
      "secondaryColor": "#E91E63",
      "accentColor": "#FF9800"
    }
  },
  "api": {
    "baseUrl": "https://api.minymol.com",
    "timeout": 10000,
    "retryAttempts": 3,
    "endpoints": {
      "categories": "/categories",
      "products": "/products", 
      "providers": "/providers",
      "reels": "/reels",
      "search": "/search",
      "auth": "/auth"
    }
  },
  "cache": {
    "maxSize": "6MB",
    "defaultTTL": 3600,
    "cleanupInterval": 86400,
    "enableOfflineMode": true,
    "preloadCategories": true,
    "preloadHomeProducts": true
  },
  "features": {
    "reelsEnabled": true,
    "providerStoriesEnabled": true,
    "pushNotificationsEnabled": true,
    "offlineModeEnabled": true,
    "infiniteScrollEnabled": true,
    "searchSuggestionsEnabled": true,
    "darkModeEnabled": false
  },
  "ui": {
    "showSkeletonLoaders": true,
    "animationDuration": 300,
    "refreshThreshold": 50,
    "itemsPerPage": 20,
    "maxRecentSearches": 10,
    "maxRecentlyViewed": 50
  },
  "meta": {
    "version": "1.0",
    "lastUpdated": "2025-09-18T00:00:00Z",
    "environment": "production"
  }
}